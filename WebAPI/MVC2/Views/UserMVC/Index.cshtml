@model IEnumerable<MVC2.Models.UserMVC>

@{
    ViewBag.Title = "Index";
}

<h3>List of Users</h3>

@*Create Button*@
<div class="create-button-div">
    <p class="create-button">
        @Html.ActionLink("Create new User", "Create")
    </p>
</div>

<table class="table">
    <tr>
        <th class="table-head">
            @*@Html.DisplayNameFor(model => model.UserId)*@
            <label>User Id</label>
        </th>
        <th class="table-head">
            @*@Html.DisplayNameFor(model => model.Name)*@
            <label>Name</label>
        </th>
        <th class="table-head">
            @*@Html.DisplayNameFor(model => model.Address)*@
            <label>Address</label>
        </th>
        <th class="table-head">
            @*@Html.DisplayNameFor(model => model.Contact)*@
            <label>Contact Number</label>
        </th>
        <th class="table-head">
            <label>Actions</label>
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td class="table-data">
            @Html.DisplayFor(modelItem => item.UserId)
        </td>
        <td class="table-data">
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td class="table-data">
            @Html.DisplayFor(modelItem => item.Address)
        </td>
        <td class="table-data">
            @Html.DisplayFor(modelItem => item.Contact)
        </td>
        <td class="table-data">
            @*first one is Text and 2nd one is ACTION*@
            @Html.ActionLink("Edit", "Edit", new { id=item.UserId }) &nbsp|&nbsp
            @Html.ActionLink("Delete", "Delete", new { id=item.UserId },new {onClick = "return confirm('Are you sure, you want to delete this User ??')"})
        </td>
    </tr>
}

</table>
